
{% set service = data.services %}

<section id="services" class="py-20 bg-slate-100">

<div class="container">

<div class="grid lg:grid-cols-6 gap-4">

<div class="lg:col-start-2 lg:col-span-4 text-center" data-aos-delay="300" data-aos="fade-down">

<h2 class="top_title">{{ service.top_title }}</h2>

<h3 class="text-4xl text-primary h2 mb-3">{{ service.title }}</h3>

<p class="leading-7">{{ service.description }}</p>


</div>

</div>


{% set breakpoints =  {
    '320': {
      'slidesPerView': 1.1,
      'spaceBetween': 10,
      'centeredSlides': true,
    },
    '480': {
      'slidesPerView': 1.1,
      'spaceBetween': 10,
      'centeredSlides': true,
    },
    '640': {
      'slidesPerView': 3,
      'spaceBetween': 40
    }
  } 
  %}


<div class="swiper mt-4" data-breakpoints='{{ breakpoints | json_encode() }}'>
  <div class="swiper-wrapper">

{% for key, service in service.services %}
    
    <div class="swiper-slide"  data-aos-delay="{{ key + 2 }}00" data-aos="fade-up">

    <div class="bg-white shadow-sm rounded-md my-1 text-center">

    <img class="rounded-md mx-auto block h-[250px] w-full object-cover pointer-events-none" src="{{ service.image }}" alt="{{ service.title }}" />

      <div class="py-4 px:3 lg:px-5">

       <h3 class="text-[18px] my-2 font-semibold">{{ service.title }}</h3>

      <p class="text-[15px]">{{ service.description }}</p>
      
      </div>


      </div>
    
    
    </div>
    
    {% endfor %}

   
  </div>


</div>





</div>


</section>