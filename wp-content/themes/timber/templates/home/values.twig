
<section id="values" class="text-white bg-cover bg-center w-full py-20 relative" style="background-image:url({{ data.values.background }})">
<div class="absolute w-full h-full bg-[#0071a8ad] top-0 left-0 z-20"></div>
<div class="container relative z-30">
<div class="mb-10 text-center" data-aos-delay="100" data-aos="fade-down">

<h2 class="top_title">{{ data.values.top_title }}</h2>

<h3 class="h2 lg:text-4xl text-3xl mb-3">{{ data.values.title }}</h3>

</div>

<div class="grid grid-cols-2 lg:grid-cols-4 lg:gap-4 gap-8">

{% for key, value in data.values.values %}

<div class="flex flex-col text-center group" data-aos-delay="{{ key + 2 }}00" data-aos="fade-up">

<div class="h-[90px] w-[90px] border-2 group-hover:bg-transparent bg-secondary transition-all rounded-full mx-auto flex justify-center items-center">

<img src={{ value.icon }} alt="{{ value.title }}"  class="h-[60px] w-[60px] pointer-events-none" />

</div>

<h3 class="my-2 text-[18px]">{{ value.title }}</h3>

<p class="text-sm">{{ value.description }}</p>

</div>

{% endfor %}

</div>

</div>

</section>